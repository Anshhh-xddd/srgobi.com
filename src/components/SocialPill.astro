---
const { href } = Astro.props;

// Default email link (Gmail version)
const defaultEmail = "https://mail.google.com/mail/?view=cm&fs=1&to=aniruddhbambhaniya.dev.29@gmail.com";

// Check if href is a mailto link
const isMailTo = href ? href.startsWith("mailto:") : false;
---

<a
  href={isMailTo ? defaultEmail : href || defaultEmail}
  class:list={{
    "inline-flex items-center gap-x-2 py-2 px-4 rounded-full transition-all": true,
    "border border-black/10 dark:border-white/10": true,
    "bg-zinc-500/5 dark:bg-white/5": true,
    "hover:scale-110 hover:bg-zinc-500/10 dark:hover:bg-white/10": true,
  }}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
