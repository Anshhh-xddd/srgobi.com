---

<section class="skills py-12 px-4">
  <!-- <h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">Skills</h2> -->
  <div class="skills-grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    {skillList.map((skill) => (
      <div class="skill-card p-6 bg-gray-900  border rounded-lg shadow-md text-center hover:shadow-lg transition-shadow">
        <img src={skill.icon} alt={skill.name} class="w-16 h-16 mx-auto mb-4 object-contain " />
        <h3 class="text-xl font-medium text-white">{skill.name}</h3>
        <p class="text-gray-600 mt-2">{skill.description}</p>
      </div>
    ))}
  </div>
</section>
