    // description: 'Building the structure of web pages with HTML.'
  },
  {
    name: 'CSS',
    icon: 'https://cdn-icons-png.flaticon.com/128/569/569798.png',
    // description: 'Styling web pages with CSS, including Flexbox and Grid layouts.'
  },
  {
    name: 'JavaScript',
    icon: 'https://cdn-icons-png.flaticon.com/128/9199/9199613.png',
    // description: 'Adding interactivity and logic to websites with JavaScript.'
  },
  {
    name: 'React',
    icon: 'https://cdn-icons-png.flaticon.com/128/1550/1550935.png',
    // description: 'Building dynamic user interfaces with React.js.'
  },
  {
    name: 'Tailwind CSS',
    icon: 'https://img.icons8.com/?size=48&id=UpSCHTwpywad&format=png',
    // description: 'Rapidly styling web pages with utility-first Tailwind CSS.'
  },
  {
    name: 'Bootstrap',
    icon: 'https://cdn-icons-png.flaticon.com/128/9255/9255589.png',
    // description: 'Rapidly styling web pages with utility-first Tailwind CSS.'
  },
  {
    name: 'UI/UX Design',
    icon: 'https://cdn-icons-png.flaticon.com/128/13191/13191289.png',
    // description: 'Creating visually appealing and user-friendly interfaces.'
  },
  {
    name: 'Figma',
    icon: 'https://img.icons8.com/?size=160&id=8fJfWdNsfht8&format=png',
    // description: 'Designing and prototyping interfaces with Figma.'
  }
